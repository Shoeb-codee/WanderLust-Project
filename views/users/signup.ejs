<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
  <!-- On small devices, full width; on medium & up, use half with offset -->
  <h1 class="col-12 text-center text-md-start"> SignUp on Wanderlust </h1>
  <div class="col-12 col-md-6 offset-md-3">
     <form method="post" action="/signup" novalidate class="needs-validation">
      <!-- USERNAME -->
        <div class="mb-3">
          <label for="username" class="form-label">Username</label>
          <input
            type="text"
            name="username"
            id="username"
            class="form-control"
            required
          />
          <div class="valid-feedback"> Looks Good!</div>
          <div class="invalid-feedback">Enter a Valid Username</div>
        </div>

        <!-- EMAIL -->
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input
            type="email"
            name="email"
            id="email"
            class="form-control"
            required
          />
        </div>

        <!-- PASSWORD -->
         <div class="mb-3">
          <label for="password" class="form-label">password</label>
          <input
            type="password"
            name="password"
            id="password"
            class="form-control"
            required
          />
        </div>
        <button class="btn btn-success">SignUp</button>
    </form>
  </div>
</div>