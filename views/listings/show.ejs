<% layout("/layouts/boilerplate") %>
<div class="row">
  <div class="col-6 offset-3">
    <!-- <h3 class="mt-2"><%= listing.title %></h3> -->
   <div class="card border-0 shadow-sm mt-3" style="width: 100%; max-width: 550px;">
  <img
    src="<%= listing.image.url %>"
    class="card-img-top img-fluid"
    alt="Listing Image"
    style="height: 300px; object-fit: cover;"
  />
  <div class="card-body">
    <h5 class="card-title mb-2"><%= listing.title %></h5>
    <p class="text-secondary mb-2" style="font-size: 0.95rem;">by <%= listing.owner.username %></p>
    <div class="row mb-2">
      <div class="col-4">
        <span class="fw-semibold text-muted">Price</span>
        <div class="fs-6">&#8377; <%= listing.price.toLocaleString("en-IN") %></div>
      </div>
      <div class="col-4">
        <span class="fw-semibold text-muted">Location</span>
        <div class="fs-6"><%= listing.location %></div>
      </div>
      <div class="col-4">
        <span class="fw-semibold text-muted">Country</span>
        <div class="fs-6"><%= listing.country %></div>
      </div>
    </div>
    <div class="mt-3">
      <span class="fw-semibold text-muted">Description</span>
      <div class="p-2 rounded bg-light border mt-1" style="font-size: 0.98rem; font-weight: 400; line-height: 1.5;">
        <%= listing.description %>
      </div>
    </div>
  </div>
</div>
    <br />
    <!-- Buttons -->
     <% if(currUser && currUser._id.equals(listing.owner._id)) {%>
    <div class="list-btn">
      <a
        class="btn btn-dark edit-btn col-2"
        href="/listings/<%= listing._id %>/edit"
        >Edit</a
      >
      <form method="post" action="/listings/<%= listing._id %>?_method=Delete">
        <button class="btn btn-dark">Delete</button>
      </form>
    </div>
    <% } %>
  </div>

 <!-- REVIEW SECTION -->

  <div class="col-8 offset-3 mt-3 mb-3">
    <hr />
    <% if(currUser){ %>
    <h4>Leave a Review</h4>
    <style>
  .star-rating {
    direction: rtl;
    display: inline-flex;
    gap: 0.2rem;
  }
  .star-rating input[type="radio"] {
    display: none;
  }
  .star-rating label {
    font-size: 1.7rem;
    color: #ccc;
    cursor: pointer;
    transition: color 0.2s;
  }
  .star-rating input[type="radio"]:checked ~ label,
  .star-rating label:hover,
  .star-rating label:hover ~ label {
    color: #ffd700;
  }
</style>

<form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation">
  <div class="mb-3">
    <label class="form-label">Rating</label>
    <div class="star-rating">
      <% for(let i=5; i>=1; i--){ %>
        <input type="radio" id="star<%= i %>" name="review[rating]" value="<%= i %>">
        <label for="star<%= i %>"><i class="fa fa-star"></i></label>
      <% } %>
    </div>
  </div>
  <div class="mb-3">
    <label for="comment" class="form-label">Comment</label>
    <textarea required class="form-control border border-4"  name="review[comment]" id="comment" cols="30" rows="5"></textarea>
    <div class="invalid-feedback">Write a Review Here!</div>
  </div>
  <button class="btn btn-outline-dark">
    Submit
  </button>
</form>
    <hr />
<% } %>
    

    <p><b>All Reviews</b></p>

<div class="row">
    <% for(review of listing.reviews){ %>
      <div class="card col-5 mb-2 ms-2">
        <div class="card-body">
          <h4 class="card-title">üë§<%= review.author.username %></h4>
          <p class="card-text"><%= review.comment %></p>
          <p class="card-text"><%= review.rating %> <span>‚≠ê</span></p>
          <form method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" >
            <button class="btn btn-sm btn-dark">Delete</button>
          </form>
        </div>
      </div>

      <% } %>
</div>
  </div>
</div>
