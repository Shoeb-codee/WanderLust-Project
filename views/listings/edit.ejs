<% layout("/layouts/boilerplate") %>

<div class="row">
  <div class="col-8 offset-2">
    <h3>Edit this Listing</h3>

    <form method="post" novalidate class="needs-validation" action="/listings/<%= listing._id %>?_method=PUT" enctype="multipart/form-data">
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          required
          class="form-control"
          type="text"
          name="listing[title]"
          value="<%= listing.title %>"
        />
          <div class="invalid-feedback">Enter a Valid Title</div>
      </div>
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea required class="form-control" name="listing[description]">
<%= listing.description %></textarea
        >
          <div class="invalid-feedback">Enter a Valid Description</div>
      </div>

      <!-- Existing Image -->
      <div class="mb-3 w-25">
  <label class="form-label">Existing Image</label><br>
  <img src="<%= listing.image.url %>" alt="Listing Image" class="img-thumbnail img-fluid rounded" style="max-width: 150px;">
</div>

      <div class="mb-3">
        <label for="image" class="form-label">Replace Existing Image</label>
        <input
          class="form-control"
          type="file"
          name="listing[image]"
        />

      </div>
      <div><select name="listing[category]" id="category" class="form-control" required>
  <option value="" disabled>Select Category</option>
  <% const categories = ["Trending", "Rooms", "Iconic Cities", "Mountains", "Castles", "Amazing Pool", "Camping", "Farms", "Acrtic"]; %>
  <% categories.forEach(cat => { %>
    <option value="<%= cat %>" <%= listing.category === cat ? "selected" : "" %>><%= cat %></option>
  <% }) %>
</select>
</div>
      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Price</label>
          <input
          required
            class="form-control"
            type="number"
            name="listing[price]"
            value="<%= listing.price %>"
          />
          <div class="invalid-feedback">Enter valid price</div>

        </div>
        <div class="mb-3 col-md-4">
          <label for="country" class="form-label">Country</label>
          <input
          required
            class="form-control"
            type="text"
            name="listing[country]"
            value="<%= listing.country %>"
          />
          <div class="invalid-feedback">Enter your country</div>

        </div>
      </div>
      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input
        required
          class="form-control"
          type="text"
          name="listing[location]"
          value="<%= listing.location %>"
        />
          <div class="invalid-feedback">Enter your location</div>

      </div>
      <button class="btn btn-dark edit-btn mb-3">Edit</button>
    </form>
  </div>
</div>
